@page
@model EmailModel
@{
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light">Keisti El.Paštą</h3></div>
                    <div class="card-body">
                        <form id="email-form" method="post">
                            <div class="text-danger" style="list-style:none;text-align:center;">
                                @Html.ValidationSummary()
                            </div>

                            <div class="form-group">
                                @if (Model.IsEmailConfirmed)
                                {
                                    <div><span asp-validation-for="Email" class="text-danger"></span></div>
                                    <label asp-for="Email" class="small mb-1" for="inputEmailAddress">El. Paštas</label>
                                    <input asp-for="Email" class="form-control py-4" id="inputEmailAddress" type="email" placeholder="El. Paštas" disabled />
                                }
                                else
                                {
                                    <input asp-for="Email" class="form-control py-4" id="inputEmailAddress" type="email" placeholder="El. Paštas" disabled />
                                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                                }

                            </div>
                            <div class="form-group">
                                <div><span asp-validation-for="Input.NewEmail" class="text-danger"></span></div>
                                <label asp-for="Input.NewEmail" class="small mb-1" for="inputPassword">Naujas El. Paštas</label>
                                <input asp-for="Input.NewEmail" class="form-control py-4" id="inputPassword" type="text" placeholder="Telefono Numeris" />
                            </div>
                            <div class="form-group align-items-center justify-content-between">

                                <div class="form-group mt-4 mb-0"><input  id="change-email-button" type="submit" asp-page-handler="ChangeEmail"  class="btn-success btn-block" value="Patvirtinti" /></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
