@page
@model ChangePasswordModel
@{
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />


<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light">Pakeisti Slaptažodį</h3></div>
                    <div class="card-body">
                        <form id="change-password-form" method="post">
                            <div class="text-danger" style="list-style:none;text-align:center;">
                                @Html.ValidationSummary()
                            </div>

                            <div class="form-group">
                                <div><span asp-validation-for="Input.OldPassword" class="text-danger"></span></div>
                                <label asp-for="Input.OldPassword" class="small mb-1" for="inputEmailAddress">Senas Slaptažodis</label>
                                <input asp-for="Input.OldPassword" class="form-control py-4" id="inputEmailAddress" type="password" placeholder="Senas Slaptažodis"  />
                            </div>
                            <div class="form-group">
                                <div><span asp-validation-for="Input.NewPassword" class="text-danger"></span></div>
                                <label asp-for="Input.NewPassword" class="small mb-1" for="inputEmailAddress">Naujas Slaptažodis</label>
                                <input asp-for="Input.NewPassword" class="form-control py-4" id="inputEmailAddress" type="password" placeholder="Naujas Slaptažodis"  />
                            </div>
                            <div class="form-group">
                                <div><span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span></div>
                                <label asp-for="Input.ConfirmPassword" class="small mb-1" for="inputPassword">Pakartokite Naują Slaptažodį</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control py-4" id="inputPassword" type="password" placeholder="Pakartokite Naują Slaptažodį" />
                            </div>
                            <div class="form-group align-items-center justify-content-between">

                                <div class="form-group mt-4 mb-0"><input type="submit" class="btn-success btn-block" value="Patvirtinti" /></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}