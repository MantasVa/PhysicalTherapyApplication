@page
@model IndexModel
@{
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light">Profilis</h3></div>
                    <div class="card-body">
                        <form id="profile-form" method="post">
                            <div class="text-danger" style="list-style:none;text-align:center;">
                                @Html.ValidationSummary()
                            </div>

                            <div class="form-group">
                                <div><span asp-validation-for="Username" class="text-danger"></span></div>
                                <label asp-for="Username" class="small mb-1" for="inputEmailAddress">El. Paštas</label>
                                <input asp-for="Username" class="form-control py-4" id="inputEmailAddress" type="email" placeholder="El. Paštas" disabled />
                            </div>
                            <div class="form-group">
                                <div><span asp-validation-for="Input.PhoneNumber" class="text-danger"></span></div>
                                <label asp-for="Input.PhoneNumber" class="small mb-1" for="inputPassword">Telefono Numeris</label>
                                <input asp-for="Input.PhoneNumber" class="form-control py-4" id="inputPassword" type="text" placeholder="Telefono Numeris" />
                            </div>
                            <div class="form-group align-items-center justify-content-between">

                                <div class="form-group mt-4 mb-0"><input id="update-profile-button" type="submit"  class="btn-success btn-block" value="Išsaugoti" /></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}