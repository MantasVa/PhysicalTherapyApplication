@model IEnumerable<PhysicalTherapyProjectV2.Models.Post>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="Create">Create</a>


@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        <p>@TempData["message"]</p>
    </div>
}



<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Title</th>
        <th class="text-right">Body</th>
        <th class="text-center">Created On</th>
        <th class="text-center"></th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td class="text-right">@item.Id</td>
    <td>@item.Title</td>
    <td class="text-right">@item.Body</td>
    <td class="text-right">@item.CreatedOn</td>
    <td class="text-center">

        <a asp-action="Edit" class="btn btn-sm btn-warning"
           asp-route-id="@item.Id">
            Edit
        </a>
    </td>
    <td>
        
        <form asp-action="Delete" method="post" asp-route-id="@item.Id">
            <button type="submit" class="btn btn-danger btn-sm">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>

