@model ResetPasswordDto
@{
    ViewData["Title"] = "ResetPassword";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row-cms justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Slaptažodžio priminimas</h3></div>
                            <div class="card-body">
                                <form asp-action="ResetPassword" asp-controller="Authorization" method="post">
                                    <div class="text-danger" style="list-style:none;text-align:center;">
                                        @Html.ValidationSummary()
                                    </div>

                                    <div class="form-group">
                                        <input type="hidden" asp-for="@Model.Token" />
                                        <input type="hidden" asp-for="@Model.Email" />
                                        <div><span asp-validation-for="@Model.Password" class="text-danger"></span></div>
                                        <label asp-for="@Model.Password" class="small mb-1" for="inputEmailAddress">Slaptažodis</label>
                                        <input asp-for="@Model.Password" class="form-control py-4" id="inputEmailAddress" type="password" placeholder="Slaptažodis" />
                                    </div>
                                    <div class="form-group">
                                        <div><span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span></div>
                                        <label asp-for="@Model.ConfirmPassword" class="small mb-1" for="inputEmailAddress">Patvirtinti slaptažodį</label>
                                        <input asp-for="@Model.ConfirmPassword" class="form-control py-4" id="inputEmailAddress" type="password" placeholder="Patvirtinti slaptažodį" />
                                    </div>
                                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <div class="form-group mt-4 mb-0"><input class="btn btn-primary btn-block" type="submit" value="Patvirtinti" /></div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center">
                                <div class="small"><a asp-controller="Authorization" asp-action="Registration">Dar ne narys? Registruokis</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>